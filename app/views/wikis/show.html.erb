
<%= render 'upgrade' %>

<div>
  <h1>
    <%= markdown(@wiki.title) %>
    <h6>
      <% if @wiki.user %>
      created <%= time_ago_in_words(@wiki.created_at) %> ago by <%= @wiki.user.email %>
      <% else %>
      created <%= time_ago_in_words(@wiki.created_at) %>
      <% end %>
    </h6>
  </h1>
</div>

<div class="row">
  <div class="col-md-8">
    <p><%= markdown(@wiki.body) %></p>
  </div>
</div>

<div>
  <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-primary' %>
  <% if user_is_authorized_to_delete?(@wiki) %>
  <%= link_to "Delete Wiki", [@wiki], method: :delete, class: 'btn btn-danger', data: {confirm: "Are you sure you want to delete this wiki?"} %>
  <% end %>
  <% if  authorized_to_create_collaboration?(@wiki) %>
  <%= link_to "Collaborate", new_wiki_collaborator_path(@wiki), class: 'btn btn-success' %>
  <% end %>
</div>
<br>
<div>
  <%= link_to "Back to Wikis", wikis_path %>
</div>
