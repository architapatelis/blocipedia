<div>
  <h1>
    <%= @wiki.title %><br />
    <h6>
      created <%= time_ago_in_words(@wiki.created_at) %> ago by <%= @wiki.user.email %>
    </h6>
  </h1>
</div>

<div class="row">
  <div class="col-md-8">
    <p><%= @wiki.body %></p>
  </div>
</div>
<br>
<div>
  <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-primary' %>
  <% if @wiki.user == current_user %>
    <%= link_to "Delete Wiki", [@wiki], method: :delete, class: 'btn btn-danger', data: {confirm: "Are you sure you want to delete this wiki?"} %>
  <% end %>
</div>
<br>
<div>
  <%= link_to "Back to Wikis", wikis_path %>
</div>
